{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./dist/",
    "rootDir": "./", 
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
  },
  "include": ["./src/**/*.ts", "./prisma/**/*.ts"],
  "exclude": ["node_modules"]
}